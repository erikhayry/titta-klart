{

  "manifest_version": 2,
  "name": "Titta klart",
  "version": "1.0",
  "description": "Hjälper dig att hinna se klart en serie innan den försvinner från SVT Play",
  "icons": {
    "48": "icons/logo.png",
    "96": "icons/logo@2x.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.svtplay.se/*"],
      "js": [
        "/node_modules/@sentry/browser/build/bundle.min.js",
        "/node_modules/moment/min/moment.min.js",
        "titta-klart.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background-script.js"
    ]
},
  "permissions": [
    "notifications",
    "https://titta-klart-api.now.sh/",
    "https://api.svt.se/*"
  ]
}